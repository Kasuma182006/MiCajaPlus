<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="35dp"
    tools:context=".Calendario.ConsultarXFecha"
    android:background="@color/color_fondo"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contenedor_estado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/btnCerrar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/flecha_retroceso"
            app:layout_constraintEnd_toStartOf="@id/txtTitulo"
            app:layout_constraintStart_toStartOf="@id/contenedor_estado"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="10dp"
            android:text="Estado de la tienda"
            android:textColor="@color/ttl_campos"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnCerrar"
            app:layout_constraintTop_toTopOf="parent " />

        <TextView
            android:id="@+id/txt_colendario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rango"
            android:textColor="@color/ttl_campos"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/txtTitulo"
            app:layout_constraintBottom_toTopOf="@id/btn_calendarioStar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/btn_calendarioStar"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input_calendario"
            android:text="Inicio"
            android:textColor="@color/color_campos"
            android:textColorHint="@color/color_campos"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/txt_colendario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_calendarioEnd"
            app:layout_constraintBottom_toTopOf="@id/tvRangoFecha"
            app:layout_constraintHorizontal_bias="0.262" />



        <TextView
            android:id="@+id/btn_calendarioEnd"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input_calendario"
            android:text="Fin"
            android:textAlignment="center"
            android:textColor="@color/color_campos"
            android:textColorHint="@color/color_campos"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tvRangoFecha"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.601"
            app:layout_constraintStart_toEndOf="@id/btn_calendarioStar"
            app:layout_constraintTop_toBottomOf="@id/txt_colendario"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvRangoFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="DD/MM/AAAA - DD/MM/AAAA"
            android:textColorHint="@color/gris"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn_calendarioStar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardVentas"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="#6DD0CCDB"
            app:cardCornerRadius="18dp"
            app:layout_constraintEnd_toStartOf="@id/cardCostos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvRangoFecha"
            app:strokeColor="#6DD0CCDB"
            app:strokeWidth="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ventas"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvVentas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="$ 0"
                    android:textColorHint="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCostos"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="42dp"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="#DBDCFF"
            app:strokeColor="#DBDCFF"
            app:strokeWidth="3dp"
            app:layout_constraintTop_toBottomOf="@id/tvRangoFecha"
            app:layout_constraintStart_toEndOf="@id/cardVentas"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Costos"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvCostos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="$ 0"
                    android:textColorHint="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardGastos"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="#F4DBFA"
            app:strokeColor="#F4DBFA"
            app:strokeWidth="3dp"
            app:layout_constraintTop_toBottomOf="@id/cardVentas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cardFiados">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gastos"
                    android:textColor="#000000"                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvGastos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="$ 0"
                    android:textColorHint="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFiados"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="#EBECCF"
            app:strokeColor="#EBECCF"
            app:strokeWidth="3dp"
            app:layout_constraintTop_toBottomOf="@id/cardVentas"
            app:layout_constraintStart_toEndOf="@id/cardGastos"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fiados"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvFiados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="0 "
                    android:textColorHint="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardUtilidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/color_fondo"
            app:strokeColor="@color/verde_utilidad_targeta"
            app:strokeWidth="3dp"
            app:layout_constraintTop_toBottomOf="@id/cardFiados"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/verde_utilidad_targeta"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Utilidad"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvUtilidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:hint="$ 0"
                    android:textColorHint="#000000"
                    android:textSize="34sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>