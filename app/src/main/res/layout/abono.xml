<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="800dp"
    android:background="@color/color_fondo"
    android:layout_marginTop="10dp"
    tools:context=".Opciones">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnRetroceso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/flecha_retroceso"
            app:layout_constraintStart_toStartOf="@id/constraint"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/Logo_app"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo_app"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingTop="5dp"
            android:text="@string/abono"
            android:textColor="@color/ttl_campos"
            android:textSize="38sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnRetroceso" />

        <TextView
            android:id="@+id/nroidentificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:text="Número de identificación"
            android:textColor="@color/ttl_campos"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/constraint"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            />

        <EditText
            android:id="@+id/identificacion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_input_chat_tendero"
            android:inputType="number"
            android:textColor="@color/ttl_campos"
            app:layout_constraintStart_toStartOf="@id/constraint"
            app:layout_constraintEnd_toStartOf="@id/buscar"
            app:layout_constraintTop_toBottomOf="@+id/nroidentificacion" />

        <Button
            android:id="@+id/buscar"
            android:layout_width="60dp"
            android:layout_height="0dp"
            android:background="@drawable/boton_buscar"
            android:drawableTop="@drawable/lupa"
            app:layout_constraintBottom_toBottomOf="@+id/identificacion"
            app:layout_constraintEnd_toEndOf="@id/constraint2"
            app:layout_constraintTop_toTopOf="@+id/identificacion" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/buscar"
            android:layout_marginTop="20dp"
            android:background="@drawable/bordes_acciones"
            android:orientation="vertical"
            android:padding="15dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/nombre_persona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/constraint2"
                app:layout_constraintEnd_toEndOf="@id/constraint2"
                app:layout_constraintTop_toTopOf="@id/constraint2"
                android:text="Andres Felipe Vivas"
                android:textColor="#4F4F4F"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/telefono_persona"
                android:layout_width="match_parent"
                android:textColor="#4F4F4F"
                app:layout_constraintTop_toBottomOf="@id/nombre_persona"
                app:layout_constraintEnd_toEndOf="@id/constraint2"
                android:layout_height="wrap_content"
                android:text="3117378989"
                android:layout_marginTop="5dp"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/montoquedebe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Saldo pendiente:"
                app:layout_constraintTop_toBottomOf="@id/telefono_persona"
                app:layout_constraintEnd_toEndOf="@id/constraint2"
                android:textColor="@color/ttl_campos"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/creditospendientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/montoquedebe"
                android:textColor="#4F4F4F"
                app:layout_constraintStart_toStartOf="@id/constraint2"
                android:text="Créditos pendientes: "
                />



        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Nombre Completo"
            android:textColor="@color/ttl_campos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/constraint2"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/camponombre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_input_chat_tendero"
            android:textColor="@color/ttl_campos"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/nombre"
            app:layout_constraintTop_toBottomOf="@id/nombre" />

        <TextView
            android:id="@+id/telefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Número telefónico"
            android:textColor="@color/ttl_campos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/camponombre"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/campotelefono"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_input_chat_tendero"
            android:inputType="number"
            android:textColor="@color/ttl_campos"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/nombre"
            app:layout_constraintTop_toBottomOf="@id/telefono" />

        <TextView
            android:id="@+id/monto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Monto"
            android:textColor="@color/ttl_campos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/nombre"
            app:layout_constraintTop_toBottomOf="@id/campotelefono" />

        <EditText
            android:id="@+id/campomonto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_input_chat_tendero"
            android:inputType="number"
            android:textColor="@color/ttl_campos"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/monto"
            app:layout_constraintTop_toBottomOf="@id/monto" />


        <Button
            android:id="@+id/boton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/boton_buscar"
            android:text="Registrar"
            android:textSize="21sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/campomonto" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
