<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/colorBackground"
    tools:context=".fragment_editar_producto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp">


        <ImageButton
            android:id="@+id/btnRetroceso"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/ic_Retroceder"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/retroceso"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/colorOnSecondary" />

        <ImageView
            android:id="@+id/etBuscarPresentacion"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:contentDescription="@string/logo_App"
            android:src="@drawable/logo_app"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTituloEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/Editar_Inventario"
            android:textColor="@color/colorOnSecondary"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnRetroceso" />

        <TextView
            android:id="@+id/tvSubtitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/subtitulo_EditarProducto"
            android:textColor="@color/gris"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTituloEditar" />


        <TextView
            android:id="@+id/labelPaso1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/label_Paso1_Producto"
            android:textColor="@color/colorOnSecondary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitulo" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvBuscador"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="2dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            app:layout_constraintEnd_toStartOf="@id/btnBuscarProducto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelPaso1">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textBuscarProducto"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:endIconMode="clear_text"
                app:endIconTint="@color/colorOnSecondary"
                app:startIconTint="@color/colorOnSecondary"
                app:counterEnabled="true"
                app:counterMaxLength="60"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBuscarProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/hint_BuscarProducto"
                    android:textColorHint="@color/gris"
                    android:imeOptions="actionSearch"
                    android:inputType="textMultiLine"
                    android:textSize="14sp" />


            </com.google.android.material.textfield.TextInputLayout>

        </androidx.cardview.widget.CardView>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBuscarProducto"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="@string/cd_btnBuscarProducto"
            android:layout_marginStart="6.5dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="@color/btn_registrarse"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_search"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="44dp"
            app:iconTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@id/cvBuscador"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cvBuscador"
            app:layout_constraintVertical_bias="0.507"
            app:rippleColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/labelPaso2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/label_Paso2_Producto"
            android:textColor="@color/colorOnSecondary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvBuscador" />

        <!--
               Controla android:alpha del CardView (0.5 = deshabilitado, 1.0 = habilitado)
               y android:enabled de cada TextInputEditText desde el código Java/Kotlin
               segun si el usuario ha seleccionado un producto o no.
        -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvFormulario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:alpha="0.5"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelPaso2"
            tools:alpha="1.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNombreProducto"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/NombreProducto"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:boxStrokeWidth="1.5dp"
                    app:hintTextColor="@color/colorOnSecondary"
                    app:startIconTint="@color/colorOnSecondary"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorOnSecondary"
                    app:counterEnabled="true"
                    app:counterMaxLength="60">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNombreProducto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        app:counterMaxLength="@integer/NombreProducto"
                        android:textSize="15sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilDescripcionProducto"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/Presentación"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:boxStrokeWidth="1.5dp"
                    app:hintTextColor="@color/colorOnSecondary"
                    app:startIconTint="@color/colorOnSecondary"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorOnSecondary"
                    app:counterEnabled="true"
                    app:counterMaxLength="80">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDescripcionProducto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        app:counterMaxLength="@integer/Presentacion"
                        android:textSize="15sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilProveedor"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/Proveedor"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:boxStrokeWidth="1.5dp"
                    app:hintTextColor="@color/colorOnSecondary"
                    app:startIconTint="@color/colorOnSecondary"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorOnSecondary"
                    app:counterEnabled="true"
                    app:counterMaxLength="60">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Proveedor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        app:counterMaxLength="@integer/Proveedor"
                        android:textSize="15sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPrecioProducto"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/precioVenta"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:boxStrokeWidth="1.5dp"
                    app:hintTextColor="@color/colorOnSecondary"
                    app:prefixText="$ "
                    app:prefixTextColor="@color/colorOnSecondary"
                    app:startIconTint="@color/colorOnSecondary"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorOnSecondary"
                    app:counterEnabled="true"
                    app:counterMaxLength="10">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPrecioProducto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        app:counterMaxLength="@integer/PrecioProducto"
                        android:textSize="15sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCantidadProducto"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/Cantidad"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:boxStrokeWidth="1.5dp"
                    app:hintTextColor="@color/colorOnSecondary"
                    app:startIconTint="@color/colorOnSecondary"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorOnSecondary"
                    app:counterEnabled="true"
                    app:counterMaxLength="10">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCantidadProducto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        app:counterMaxLength="@integer/CantidadProducto"
                        android:textSize="15sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardarProducto"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="16dp"
            android:text="@string/GUARDARPRODUCTO"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.04"
            app:backgroundTint="@color/btn_registrarse"
            app:cornerRadius="30dp"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvFormulario"
            app:rippleColor="@color/colorPrimary" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>