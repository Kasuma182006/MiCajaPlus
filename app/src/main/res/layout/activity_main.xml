<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/btn_atras_et"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="15dp"
        android:background="@drawable/ic_flecha_at" />

    <TextView
        android:id="@+id/text_reporte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_Reporte"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_atras_et"
        app:layout_constraintBottom_toTopOf="@+id/scroll_view"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"/>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/text_reporte"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_desplegar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_desplegar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txt_ventas"
                app:layout_constraintBottom_toTopOf="@+id/fragment_ventas"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp" />

            <TextView
                android:id="@+id/txt_ventas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/btn_desplegar"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/graf_Ventas"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDateRange"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/calendario_Txt"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_ventas"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/fragment_ventas"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="50dp"
                android:textStyle="normal" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragment_ventas"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_desplegar"
                android:layout_marginTop="10dp"
                tools:layout="@layout/fragment_ventas" />

            <ImageView
                android:id="@+id/btn_desplegar_cs"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_desplegar"
                app:layout_constraintTop_toBottomOf="@+id/fragment_ventas"
                app:layout_constraintBottom_toTopOf="@+id/fragment_costos"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp" />

            <TextView
                android:id="@+id/txt_costos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/btn_desplegar_cs"
                app:layout_constraintTop_toBottomOf="@+id/fragment_ventas"
                app:layout_constraintBottom_toTopOf="@+id/fragment_costos"
                android:text="@string/graf_Costos"
                android:layout_marginTop="18dp"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragment_costos"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_desplegar_cs"
                android:layout_marginTop="10dp"
                tools:layout="@layout/fragment_ventas" />

            <ImageView
                android:id="@+id/btn_desplegar_gs"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_desplegar"
                app:layout_constraintTop_toBottomOf="@+id/fragment_costos"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp" />

            <TextView
                android:id="@+id/txt_gastos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/btn_desplegar_gs"
                app:layout_constraintTop_toBottomOf="@+id/fragment_costos"
                android:text="@string/graf_Gastos"
                android:layout_marginTop="18dp"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textSize="16sp" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragment_gastos"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_desplegar_gs"
                app:layout_constraintBottom_toTopOf="@+id/btn_desplegar_cred"
                android:layout_marginTop="10dp"
                tools:layout="@layout/fragment_ventas" />

            <ImageView
                android:id="@+id/btn_desplegar_cred"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_desplegar"
                app:layout_constraintTop_toBottomOf="@+id/fragment_gastos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/fragment_creditos"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp" />

            <TextView
                android:id="@+id/txt_creditos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/btn_desplegar_cred"
                app:layout_constraintTop_toBottomOf="@+id/fragment_gastos"
                app:layout_constraintBottom_toTopOf="@+id/fragment_creditos"
                android:text="@string/graf_Creditos"
                android:layout_marginTop="18dp"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                android:textSize="16sp" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragment_creditos"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_desplegar_cred"
                android:layout_marginTop="10dp"
                tools:layout="@layout/fragment_ventas" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>