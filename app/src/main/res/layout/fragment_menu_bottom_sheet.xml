<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="24dp">

        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_sheet_handle"
            android:backgroundTint="@color/colorPrimary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:alpha="0.4"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/menuBtnComandos"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chat_vz"
                android:contentDescription="Comandos"
                app:tint="@color/colorOnSecondary"
                android:alpha="0.7" />

            <TextView
                android:id="@+id/menuTxtComandos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Comandos"
                android:textColor="@color/colorOnSecondary"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/retroceso"
                android:contentDescription="Ver comandos"
                android:rotation="180"
                android:alpha="0.4"
                app:tint="@color/colorOnSecondary" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:alpha="0.4"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Gestión"
            android:textColor="@color/gris"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.08" />

        <androidx.cardview.widget.CardView
            android:id="@+id/menuBtnBalance"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/Target_principal"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/menuCvIconBalance"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    app:cardBackgroundColor="@color/ic_principal"
                    app:cardCornerRadius="23dp"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/menuIcBalance"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:contentDescription="Balance"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_balance"
                        app:tint="@color/colorSecondary" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/menuTxtBalance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/txtBalance"
                    android:textColor="@color/colorOnSecondary"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/menuChevronBalance"
                    app:layout_constraintStart_toEndOf="@id/menuCvIconBalance"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/menuChevronBalance"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="Ir a Balance"
                    android:src="@drawable/retroceso"
                    android:rotation="180"
                    android:alpha="0.8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/colorOnSecondary" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/menuBtnEditarCliente"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/Target_principal"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/menuCvIconEditarCliente"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    app:cardBackgroundColor="@color/ic_principal"
                    app:cardCornerRadius="23dp"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/menuIcEditarCliente"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:contentDescription="Editar Cliente"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_edit_user"
                        app:tint="@color/colorSecondary" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/menuTxtEditarCliente"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/editarCliente"
                    android:textColor="@color/colorOnSecondary"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/menuChevronEditarCliente"
                    app:layout_constraintStart_toEndOf="@id/menuCvIconEditarCliente"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/menuChevronEditarCliente"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="Ir a Editar Cliente"
                    android:src="@drawable/retroceso"
                    android:rotation="180"
                    android:alpha="0.8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/colorOnSecondary" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/menuBtnEditarProducto"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/Target_principal"
            app:cardCornerRadius="20dp"
            app:cardElevation="3dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/menuCvIconEditarProducto"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    app:cardBackgroundColor="@color/ic_principal"
                    app:cardCornerRadius="23dp"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/menuIcEditarProducto"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:contentDescription="Editar Producto"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_productos"
                        app:tint="@color/colorSecondary" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/menuTxtEditarProducto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/editarProducto"
                    android:textColor="@color/colorOnSecondary"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/menuChevronEditarProducto"
                    app:layout_constraintStart_toEndOf="@id/menuCvIconEditarProducto"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/menuChevronEditarProducto"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="Ir a Editar Producto"
                    android:src="@drawable/retroceso"
                    android:rotation="180"
                    android:alpha="0.8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/colorOnSecondary" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:alpha="0.4"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/menuBtnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:gravity="center_vertical|end"
            android:paddingEnd="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/ic_Cerrar_Seccion"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_close_session"
                android:contentDescription="Cerrar sesión"
                android:alpha="1"
                app:tint="@color/utilidad_negative" />

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>