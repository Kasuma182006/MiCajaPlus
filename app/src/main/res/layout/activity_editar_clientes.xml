        <TextView
            android:id="@+id/labelPaso2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/label_Paso2"
            android:textColor="@color/colorOnSecondary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvBuscador" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvFormulario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:alpha="0.5"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelPaso2"
            tools:alpha="1.0">

            <!--
                Controla android:alpha del CardView (0.5 = deshabilitado, 1.0 = habilitado)
                y android:enabled de cada TextInputEditText desde el código Java/Kotlin
                segun si el usuario ha seleccionado un cliente o no.
            -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNombreCliente"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_NombreCliente"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:boxStrokeWidth="1.5dp"
                    app:hintTextColor="@color/colorOnSecondary"
                    app:startIconTint="@color/colorOnSecondary"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorOnSecondary"
                    app:counterEnabled="true"
                    app:counterMaxLength="60">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNombreCliente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        app:counterMaxLength="@integer/NombreCliente"
                        android:textSize="15sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCedulaCliente"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/hint_CedulaCliente"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:boxStrokeWidth="1.5dp"
                    app:hintTextColor="@color/colorOnSecondary"
                    app:startIconTint="@color/colorOnSecondary"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorOnSecondary"
                    app:counterEnabled="true"
                    app:counterMaxLength="10">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCedulaCliente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        app:counterMaxLength="@integer/Cedula"
                        android:textSize="15sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilTelefonoCliente"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/hint_TelefonoCliente"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:boxStrokeWidth="1.5dp"
                    app:hintTextColor="@color/colorOnSecondary"
                    app:startIconTint="@color/colorOnSecondary"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorOnSecondary"
                    app:counterEnabled="true"
                    app:counterMaxLength="10">
                    <!--                    app:helperText="@string/helper_Telefono">-->

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTelefonoCliente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        app:counterMaxLength="@integer/Telefono"
                        android:textSize="15sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilValorCredito"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="@string/hint_ValorCredito"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:boxStrokeWidth="1.5dp"
                    app:hintTextColor="@color/colorOnSecondary"
                    app:prefixText="$ "
                    app:prefixTextColor="@color/colorOnSecondary"
                    app:startIconTint="@color/colorOnSecondary"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/colorOnSecondary"
                    app:counterEnabled="true"
                    app:counterMaxLength="12">
                    <!--                    app:helperText="@string/helper_ValorCredito">-->

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etValorCredito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        app:counterMaxLength="@integer/valorCredito"
                        android:textSize="15sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardarCliente"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="16dp"
            android:enabled="false"
            android:text="@string/btn_ActualizarDatos"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.04"
            app:backgroundTint="@color/btn_registrarse"
            app:cornerRadius="30dp"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvFormulario"
            app:rippleColor="@color/colorPrimary"
            tools:enabled="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>
